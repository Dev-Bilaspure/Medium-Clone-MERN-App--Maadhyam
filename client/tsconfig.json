{
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["*"]
    },
    // While this is a good option, it's very friction inducing. We'll clean this up subsequently.
    "noImplicitAny": false,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "playwright/data/testIds.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
